<script>
  // Get the element with the ID "fade-out-target"
 var element = document.getElementById('fade-out-target');
  // Define a function to fade out the element
  function fadeOut() {
    // Reduce the opacity of the element gradually
    var opacity = 1;
    var intervalId = setInterval(function() {
      if (opacity > 0) {
        opacity -= 0.1; // Decrease opacity by 0.1
        element.style.opacity = opacity;
      } else {
        clearInterval(intervalId); // Stop the fading animation
        element.style.display = 'none'; // Hide the element when fading is complete
      }
    }, 100); // Run the fading animation every 100 milliseconds
  }
// Initialize dropdown
document.addEventListener('DOMContentLoaded', function() {
var elems = document.querySelectorAll('.dropdown-trigger');
var instances = M.Dropdown.init(elems);

});
// Initialize collapsible (sidenav) for mobile
 document.addEventListener('DOMContentLoaded', function() {
   var elems = document.querySelectorAll('.sidenav');
   var instances = M.Sidenav.init(elems);
 });




// Call the fadeOut function after a delay of 1000 milliseconds (1 second)
setTimeout(fadeOut, 4000);
</script>
