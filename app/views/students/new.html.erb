<% if @student.errors.any? %>
  <div id="error_explanation" class="red-text text-darken-2">

      <div class="card-panel">
        <div class="col s12 m12 l12">
    <h5><%= pluralize(@student.errors.count, "error") %> prohibited this model from being saved:</h5>
    <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  </div>
  </div>
<% end %>
<div class="container">
  <div class="sign-up-form">

  <div class="card-panel">
    <div class="col s12 m12 l12">


<h3 class="header"> <center>sign up!</center></h3>

    <div class="row">
      <%= form_for @student, html: { class: "col s12" } do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :name, id: "name" %>
            <%= f.label :name %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.email_field :email, id: "email" %>
            <%= f.label :email %>
          </div>
        </div>

        <div class="row">
       <div class="col s12 center-align">
         <button class="btn waves-effect waves-light" type="submit" name="action">Submit
           <i class="material-icons right">send</i>
         </button>
       </div>
     </div>
      <% end %>
      </div>
</div>
  </div>
</div>
</div>
